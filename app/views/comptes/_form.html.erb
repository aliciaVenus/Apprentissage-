<%= form_for(compte) do |f| %>
  <% if compte.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(compte.errors.count, "error") %> prohibited this compte from being saved:</h2>

      <ul>
      <% compte.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom, placeholder: "votre nom"%>
  </div>

  <div class="field">
    <%= f.label :prenom %>
    <%= f.text_field :prenom, placeholder:"votre prenom" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, placeholder:"votre adresse mail" %>
  </div>

  <div class="field">
    <%= f.label :pwd %>
    <%= f.password_field :pwd, placeholder:"votre mot de passe" %>
  </div>

  <div class="field">
    <%= f.label :pwdconfirme %>
    <%= f.password_field :pwdconfirme,  placeholder: "Confirmer votre mot de passe" %>
    
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
