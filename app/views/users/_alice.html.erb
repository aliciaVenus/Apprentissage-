<%= form_for(user) do |f| %>
  <div class="form-group">
  
    <div class="col-sm-10">
      <%= f.label :nom %>
    <%= f.text_field :nom %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= f.label :email %>
    <%= f.text_field :email %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <label>
          <input type="checkbox"> Remember me
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit %>
    </div>
  </div>
<% end %>

